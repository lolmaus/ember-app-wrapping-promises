<div
  class="user"
  style="
    border: 1px solid black;
    padding: 0.5em;
    display: table;
  "
  ...attributes
>
  <h2>User</h2>

  <p>
    First name: {{@user.firstName}}
  </p>

  <p>
    Last name: {{@user.lastName}}
  </p>

  <p>
    Age: {{@user.age}}
  </p>

  <p>
    Email: {{@user.email}}
  </p>
</div>

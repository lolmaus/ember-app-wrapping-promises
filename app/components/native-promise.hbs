<div class='NativePromise' ...attributes>
  <p>
    {{#if this.isPending}}
      Loading via native promise...
    {{else if this.isComplete}}
      <User @user={{this.data}}/>
    {{else if this.isError}}
      Something went wrong:
      {{format-error this.error}}
    {{else}}
      The promise failed to start, this should never happen.
    {{/if}}
  </p>

  <p>
    <button type='button' {{on 'click' (fn this.getData false)}}>
      Restart
    </button>

    <button type='button' {{on 'click' (fn this.getData true)}}>
      Restart and fail
    </button>
  </p>
</div>